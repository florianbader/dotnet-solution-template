{
  "root": true,
  "ignorePatterns": [
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@angular-eslint/recommended",
        "plugin:prettier/recommended",
        "plugin:rxjs/recommended"
      ],
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ],
        "no-console": [
          "error",
          {
            "allow": [
              "warn",
              "error"
            ]
          }
        ],
        "max-depth": [
          "error",
          4
        ],
        "max-len": [
          "error",
          240
        ],
        "max-lines": [
          "error",
          {
            "max": 300,
            "skipBlankLines": true,
            "skipComments": true
          }
        ],
        "max-lines-per-function": [
          "error",
          {
            "max": 30,
            "skipBlankLines": true,
            "skipComments": true
          }
        ],
        "max-nested-callbacks": [
          "error",
          {
            "max": 5
          }
        ],
        "max-params": [
          "error",
          {
            "max": 10
          }
        ],
        "max-statements": [
          "error",
          {
            "max": 22
          }
        ],
        "complexity": [
          "error",
          {
            "max": 14
          }
        ],
        "quotes": [
          "error",
          "single"
        ],
        "quote-props": [
          "error",
          "as-needed"
        ]
      },
      "plugins": [
        "@typescript-eslint",
        "@angular-eslint",
        "prettier",
        "rxjs"
      ]
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {}
    }
  ]
}
